<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            padding: 0px;
        }
        .navbar.navbar-inverse.navbar-fixed-top {
            position: sticky;
        }
        /* Buttons Index Contabilidad */
        .btn-rows {
            margin: 30px 0px 40px 0px;
            display: flex;
            flex-wrap: wrap;
            text-align: center;
            justify-content: center;
        }
        .btn-rows a {
            padding: 50px 0px;
            width: 40%;
            font-size: 20px;
            font-weight: 500;
        }
        .btn.conta {
            color: #ffffff;
            background-color: #000000;
            margin: 4px 10px;
        }
        .btn.conta:hover {
            border: 2px solid #000000;
            color: #000000;
            background-color: #ffffff;
        }
        .btn-rows a:hover {
            font-weight: 600;
        }
    </style>
</head>
<body style="background-color:aliceblue;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:black;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" style="border:2px solid white;">
                    <span class="dropdown item"></span>
                    <span class="dropdown item"></span>
                    <span class="dropdown item"></span>
                </button>
                @Html.ActionLink("Empresa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "ModCont")</li>
                    <li>@Html.ActionLink("Plan De Cuentas", "Index", "CNTBPLANDECUENTA")</li>
                    <li>@Html.ActionLink("Cabeceras Contables", "Index", "CNTBREGCABECERACONT")</li>
                    <li>@Html.ActionLink("Detalles Contables", "Index", "CNTBREGDETALLECONTs")</li>
                    <li>@Html.ActionLink("Saldos Contables", "Index", "CNTBSALDOCONTABLE")</li>
                    <li>@Html.ActionLink("Auditorias Cabeceras", "Index", "AUDCNTBCABC")</li>
                    <li>@Html.ActionLink("Auditorias Detalles", "Index", "AUDCNTBDETC")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>